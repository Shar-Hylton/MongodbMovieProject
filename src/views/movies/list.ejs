<%- include('../partials/header') %>

<h2 class="text-2xl font-semibold mb-6 text-gray-900 dark:text-gray-100">Movies</h2>

<!-- Search -->
<form method="GET" action="/movies" class="mb-6 flex">
  <input
    type="text"
    name="q"
    placeholder="Search movies..."
    value="<%= q %>"
    class="shadow appearance-none border rounded-l px-3 py-2 w-full focus:outline-none focus:shadow-outline bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400"
  >
  <button type="submit" class="btn-primary px-4 rounded-r">
    <i class="fa-solid fa-magnifying-glass"></i>
  </button>
</form>

<!-- Movie List -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% if (movies.length === 0) { %>
    <p class="text-gray-500 col-span-full">No movies found.</p>
  <% } %>

  <% movies.forEach(movie => { %>
    <div class="bg-white dark:bg-gray-800 shadow-md rounded overflow-hidden flex flex-col">
      <% if (movie.posterUrl) { %>
        <img src="<%= movie.posterUrl %>" alt="<%= movie.name %>" class="h-48 w-full object-cover">
      <% } else { %>
        <div class="h-48 w-full bg-gray-200 flex items-center justify-center text-gray-400">
          <i class="fa-solid fa-film fa-2x"></i>
        </div>
      <% } %>

      <div class="p-4 flex-1 flex flex-col justify-between">
        <div>
          <h3 class="text-lg font-extrabold mb-1 text-gray-900 dark:text-gray-50"><%= movie.name %></h3>
          <p class="text-gray-600 mb-2 truncate dark:text-gray-200"><%= movie.description %></p>
          <p class="text-sm text-gray-500 dark:text-gray-300">Year: <%= movie.year || 'N/A' %> | Rating: <%= movie.rating %></p>
          <p class="text-sm text-gray-500 dark:text-gray-300">Genres: <%= movie.genres.join(', ') %></p>
          <p class="text-xs text-gray-400 mt-1 dark:text-gray-400">Added by: <%= movie.owner?.username || 'Unknown' %></p>
        </div>

        <div class="mt-3 flex justify-between items-center">
          <a href="/movies/<%= movie._id %>" class="btn-secondary text-sm px-2 py-1 bg-gray-200 dark:bg-gray-600 text-gray-800 dark:text-gray-100 hover:bg-gray-300 dark:hover:bg-gray-500 rounded transition-colors">
            <i class="fa-solid fa-eye mr-1"></i>Details
          </a>

          <% if (session?.user && movie.owner?._id.toString() === session.user._id) { %>
            <div class="flex space-x-2">
              <a href="/movies/edit/<%= movie._id %>" class="btn-primary text-sm px-2 py-1 bg-blue-600 dark:bg-blue-700 text-white hover:bg-blue-700 dark:hover:bg-blue-800 rounded transition-colors">
                <i class="fa-solid fa-pen-to-square mr-1"></i>Edit
              </a>
              <form action="/movies/delete/<%= movie._id %>" method="POST" onsubmit="return confirm('Are you sure?');">
                <button type="submit" class="btn-error text-sm px-2 py-1 bg-red-600 dark:bg-red-700 text-white hover:bg-red-700 dark:hover:bg-red-800 rounded transition-colors">
                  <i class="fa-solid fa-trash mr-1"></i>Delete
                </button>
              </form>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  <% }) %>
</div>

<%- include('../partials/footer') %>
